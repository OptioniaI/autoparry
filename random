	PremiumOnly = false
})

-- Speed Toggle
Tab:AddToggle({
	Name = "Speed",
	Default = false,
	Callback = function(Value)
		print(Value)
	end    
})

-- Speed Slider
Tab:AddSlider({
	Name = "Speed",
	Min = 0,
	Max = 55,
	Default = 0,
	Color = Color3.fromRGB(255,255,255),
	Increment = 1,
	ValueName = "Speed",
	Callback = function(Value)
		print(Value)
	end    
})

-- Toggle Speed keybind
Tab:AddTextbox({
	Name = "Key to toggle Speed",
